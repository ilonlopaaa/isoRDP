name: RDP Anti-Idle

on:
  workflow_dispatch:

jobs:
  secure-rdp:
    runs-on: windows-latest
    timeout-minutes: 355  # 5 jam 55 menit (buffer 5 menit)

    steps:
      - name: Configure Core RDP Settings
        run: |
          # Enable Remote Desktop
          Set-ItemProperty -Path 'HKLM:\System\CurrentControlSet\Control\Terminal Server' -Name "fDenyTSConnections" -Value 0 -Force
          Set-ItemProperty -Path 'HKLM:\System\CurrentControlSet\Control\Terminal Server\WinStations\RDP-Tcp' -Name "UserAuthentication" -Value 0 -Force
          
          # Firewall rule
          netsh advfirewall firewall add rule name="RDP" dir=in action=allow protocol=TCP localport=3389
          
          # Disable sleep & power saving
          powercfg -change -standby-timeout-ac 0
          powercfg -change -monitor-timeout-ac 0
          powercfg -change -disk-timeout-ac 0
          powercfg -h off
          
          # Restart service
          Restart-Service -Name TermService -Force
          Write-Host "‚úÖ RDP Configured"

      - name: Create RDP User
        run: |
          # Password tetap (gampang diingat)
          $password = "RDP@Pass123"
          $securePass = ConvertTo-SecureString $password -AsPlainText -Force
          
          # Buat user
          New-LocalUser -Name "RDP" -Password $securePass -AccountNeverExpires
          Add-LocalGroupMember -Group "Administrators" -Member "RDP"
          Add-LocalGroupMember -Group "Remote Desktop Users" -Member "RDP"
          
          # Simpan ke environment
          echo "RDP_USER=RDP" >> $env:GITHUB_ENV
          echo "RDP_PASS=$password" >> $env:GITHUB_ENV
          
          Write-Host "‚úÖ User created: RDP / $password"

      - name: Install Tailscale
        run: |
          # Download Tailscale
          $tsUrl = "https://pkgs.tailscale.com/stable/tailscale-setup-latest-amd64.msi"
          $installerPath = "$env:TEMP\tailscale.msi"
          
          Invoke-WebRequest -Uri $tsUrl -OutFile $installerPath
          
          # Install
          Start-Process msiexec.exe -Wait -ArgumentList @(
            "/i",
            "`"$installerPath`"",
            "/quiet",
            "/norestart"
          )
          
          # Tunggu 15 detik
          Start-Sleep -Seconds 15
          Write-Host "‚úÖ Tailscale Installed"

      - name: Establish Tailscale Connection
        env:
          TAILSCALE_AUTH_KEY: ${{ secrets.TAILSCALE_AUTH_KEY }}
        run: |
          # Connect Tailscale
          & "$env:ProgramFiles\Tailscale\tailscale.exe" up --authkey=$env:TAILSCALE_AUTH_KEY --hostname=gh-runner-$env:GITHUB_RUN_ID
          
          # Tunggu IP
          $tsIP = $null
          $retries = 0
          while (-not $tsIP -and $retries -lt 12) {
              $tsIP = & "$env:ProgramFiles\Tailscale\tailscale.exe" ip -4
              if (-not $tsIP) {
                  Start-Sleep -Seconds 5
                  $retries++
              }
          }
          
          if ($tsIP) {
              echo "TAILSCALE_IP=$tsIP" >> $env:GITHUB_ENV
              Write-Host "‚úÖ Tailscale IP: $tsIP"
          } else {
              Write-Host "‚ö†Ô∏è  IP not assigned, but continuing..."
              echo "TAILSCALE_IP=100.x.x.x (check manual)" >> $env:GITHUB_ENV
          }

      - name: Setup Anti-Idle Script
        run: |
          # Buat script anti-idle di Windows
          $antiIdleScript = @"
          `$logFile = "C:\Users\Public\keepalive.log"
          `$counter = 0
          
          while (`$true) {
              `$counter++
              `$time = Get-Date -Format "yyyy-MM-dd HH:mm:ss"
              "[\`$time] Keep-alive #\`$counter" | Out-File -FilePath `$logFile -Append
              
              # Simulasi aktivitas (tulis ke registry)
              New-ItemProperty -Path "HKCU:\Software\RDPKeepAlive" -Name "LastPing" -Value (Get-Date -Format "o") -Force | Out-Null
              
              # Cek koneksi network
              Test-Connection -ComputerName "8.8.8.8" -Count 1 -Quiet | Out-Null
              
              # Tunggu 30 detik
              Start-Sleep -Seconds 30
          }
"@
          
          # Save script
          $antiIdleScript | Out-File -FilePath "C:\Users\Public\anti_idle.ps1" -Encoding UTF8
          
          # Buat task scheduler untuk auto-start
          $action = New-ScheduledTaskAction -Execute "powershell.exe" -Argument "-WindowStyle Hidden -ExecutionPolicy Bypass -File `"C:\Users\Public\anti_idle.ps1`""
          $trigger = New-ScheduledTaskTrigger -AtStartup
          $principal = New-ScheduledTaskPrincipal -UserId "RDP" -LogonType Interactive -RunLevel Highest
          Register-ScheduledTask -TaskName "RDPKeepAlive" -Action $action -Trigger $trigger -Principal $principal -Force
          
          Write-Host "‚úÖ Anti-idle script installed"

      - name: Show Connection Info
        run: |
          Write-Host ""
          Write-Host "========================================"
          Write-Host "üü¢ WINDOWS RDP READY (ANTI-IDLE)"
          Write-Host "========================================"
          Write-Host "TAILSCALE IP: $env:TAILSCALE_IP"
          Write-Host "USERNAME: $env:RDP_USER"
          Write-Host "PASSWORD: $env:RDP_PASS"
          Write-Host "========================================"
          Write-Host "üöÄ SETELAH LOGIN KE RDP:"
          Write-Host "1. Script anti-idle OTOMATIS jalan via Task Scheduler"
          Write-Host "2. Atau jalankan manual:"
          Write-Host "   powershell -File C:\Users\Public\anti_idle.ps1"
          Write-Host "========================================"
          Write-Host "‚è≥ DURASI: 5 jam 55 menit dari sekarang"
          Write-Host "========================================"
          Write-Host ""

      - name: Maintain Connection (Optimized)
        run: |
          # Timer untuk 5 jam 50 menit
          $startTime = Get-Date
          $endTime = $startTime.AddMinutes(350)  # 5 jam 50 menit
          
          while ((Get-Date) -lt $endTime) {
              $remaining = $endTime - (Get-Date)
              $hours = [math]::Floor($remaining.TotalHours)
              $minutes = [math]::Floor($remaining.TotalMinutes % 60)
              
              Write-Host "[$(Get-Date)] ‚è±Ô∏è  Sisa: $hours jam $minutes menit"
              
              # Update setiap 1 menit (tidak terlalu sering)
              Start-Sleep -Seconds 60
          }
          
          Write-Host "‚è∞ WAKTU HABIS! RDP akan segera mati."
          Write-Host "Jalankan workflow baru untuk melanjutkan."
